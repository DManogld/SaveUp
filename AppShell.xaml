<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SaveUp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SaveUp.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Eingabe"
             Icon="{StaticResource IconOne}">
            <ShellContent Title="Eingabe"
                          ContentTemplate="{DataTemplate views:AllRenoucesPage}"
                          Route="AllRenoucesPage"
                         />
        </Tab>
        
        <Tab Title="Alle Verzichte"
             Icon="{StaticResource IconTwo}">
            <ShellContent Title="Alle Verzichte"
                          ContentTemplate="{DataTemplate views:SortAllRenouncesPage}"
                          Route="RenouncePage" 
                          
                          />
                           
        </Tab>
    </TabBar>

</Shell>
